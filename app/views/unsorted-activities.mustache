{{<layout}}
{{$pageTitle}}
  {{#categorisedActivity}}
    {{title}} {{#__}}unsorted-activities.activity-sorted{{/__}} -
  {{/categorisedActivity}}
  {{#__}}unsorted-activities.pageTitle{{/__}}
{{/pageTitle}}
{{$applicationContent}}

  <h2 class="heading-xlarge">{{#__}}unsorted-activities.heading{{/__}}</h2>

  <p class="text">{{#__}}unsorted-activities.action-overview-1{{/__}}</p>
  <p class="text">{{#__}}unsorted-activities.action-overview-2{{/__}}</p>

  {{#categorisedActivity}}
    <div class="alert alert--success" role="alert">
      {{title}} {{#__}}unsorted-activities.activity-sorted{{/__}}
    </div>
  {{/categorisedActivity}}

  <section class="more" data-test="navigation">
    <div class="nav-tabs">
      <ul class="tabs-nav" role="tablist">
        <li class="active">
          <a class="option">
            {{#__}}tabs.unsorted{{/__}}
          </a>
        </li>
        <li class="inactive">
          <a href="{{basePath}}/{{accountId}}/activities/sorted" class="option">
            {{#__}}tabs.sorted{{/__}}
          </a>
        </li>
      </ul>
    </div>

    <div class="js-tab-content tab-content tabs-body" aria-live="polite">
      <div class="js-tab-pane tab-pane tabs-panel tabs-panel-selected" ></div>
      <!--<div class="js-tab-pane tab-pane tabs-panel"></div>-->
    </div>

  </section>

  <ul class="activity-list gutter-half-bottom">
    {{#activities}}
      <li class="activity-list__item" data-test-activity="{{activity}}">
        <a class="activity-list__link" href="{{basePath}}/{{accountId}}/activities/{{activity}}/unsorted/categorise">{{title}}</a>
      </li>
    {{/activities}}
  </ul>

  <h3 class="heading-medium">{{#__}}unsorted-activities.action-finish-heading{{/__}}</h3>
  <p>{{#__}}unsorted-activities.action-finish-detail{{/__}}</p>

{{/applicationContent}}
{{/layout}}
