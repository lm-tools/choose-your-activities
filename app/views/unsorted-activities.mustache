        <li class="single">
          <input class="title" value="Try volunteering" name="prompt" type="submit" disabled>
        </li>
      </ul>

      <ul class="incomplete clear-none">
        <li class="single">
          <input class="title" value="Ask a couple of local firms for work experience" name="prompt" type="submit" disabled>
        </li>
      </ul>

      <ul class="incomplete clear-none">
        <li class="single">
          <input class="title" value="Find a mentor" name="prompt" type="submit" disabled>
        </li>
      </ul>
    </form>
    <!-- PLACE HOLDER FOR LIST OF ACTIVITIES FROM DB -->

    <h3 class="heading-medium">{{#__}}unsorted-activities.action-finish-heading{{/__}}</h3>
    <p>{{#__}}unsorted-activities.action-finish-detail{{/__}}</p>
  </div>

{{/applicationContent}}
