{{<layout}}
{{$pageTitle}}{{#__}}categorise-activity.pageTitle{{/__}}{{/pageTitle}}
{{$applicationContent}}

<a href="{{basePath}}/{{accountId}}/groups/{{group}}/activities" class="link-back">
  {{#__}}categorise-activity.backButton{{/__}}
</a>

<h1 class="heading-xlarge" data-test="heading">
  <span class="category heading-secondary">{{groupTitle}}</span>
  {{title}}
</h1>

<section class="text" data-test="details">
  <p>{{#__}}categorise-activity.overview{{/__}}</p>
</section>

<div class="menu">
  <ul class="a">
    {{#categories}}
      <form action="{{basePath}}/{{accountId}}/activities/{{activityId}}/categorise" method="POST">
        <li class="menu-container-medium {{name}}">
          <input type="hidden" name="category" value="{{name}}">
          <input type="hidden" name="group" value="{{group}}">
          {{#previousCategory}}
            <input type="hidden" name="previousCategory" value="{{previousCategory}}">
          {{/previousCategory}}
          <input class="menu-item-medium" data-test="menu-item" type="submit" value="{{title}}">
        </li>
      </form>
    {{/categories}}
  </ul>
</div>

{{/applicationContent}}
{{/layout}}
