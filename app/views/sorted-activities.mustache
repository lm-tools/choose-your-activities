                    {{#__}}sorted-activities.button-move{{/__}} <span class="visually-hidden">{{title}}</span>
                  </a>
                {{/isResortMode}}
              </span>
                </li>
              {{/activities}}
            </ul>
          </div>
        </details>
      {{/hasActivities}}
    {{/perCategory.NOT-SUITABLE}}
  </section>
</div>

{{/applicationContent}}
{{/layout}}
