{{<layout}}
{{$pageTitle}}{{#__}}unsorted-activities.pageTitle{{/__}}{{/pageTitle}}
{{$applicationContent}}

<a href="{{basePath}}/{{accountId}}/groups" class="link-back">
  {{#__}}activities-group.backButton{{/__}}
</a>

<h1 class="heading-xlarge">
  <span class="category heading-secondary">{{title}}</span>
  {{#__}}layout.header{{/__}}
</h1>

<p class="lede bold-medium" data-test="remaining">{{canDo}}</p>
<p data-test="details">{{#__}}activities.overview{{/__}}</p>

<div class="menu">
  <ul>
    {{#activities}}
      <li class="menu-container" data-test-activity="{{activity}}">
        <a class="menu-item"
           href="{{basePath}}/{{accountId}}/groups/{{group}}/activities/{{activity}}/categorise">{{title}}</a>
      </li>
    {{/activities}}
  </ul>
</div>

{{/applicationContent}}
{{/layout}}
