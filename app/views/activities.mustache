{{<layout}}
{{$pageTitle}}{{#__}}unsorted-activities.pageTitle{{/__}}{{/pageTitle}}
{{$applicationContent}}

<a href="{{basePath}}/{{accountId}}/groups" class="link-back">
  {{#__}}activities-group.backButton{{/__}}
</a>

<h1 class="heading-xlarge">
  <span class="category heading-secondary">{{title}}</span>
  {{#__}}layout.header{{/__}}
</h1>

<div class="grid-row">
  <div class="column-two-thirds">
    <p class="heading-medium core-16" data-test="remaining">{{activities.length}}
      <span class="lede">{{canDo}}</span>
    </p>

    <p data-test="details font-xsmall">{{#__}}activities.overview{{/__}}</p>

    <div class="menu">
      <ul>
        {{#activities}}
          <li class="menu-container-medium" data-test-activity="{{activity}}">
            <a class="menu-item-medium"
               href="{{basePath}}/{{accountId}}/groups/{{group}}/activities/{{activity}}/categorise">{{title}}</a>
          </li>
        {{/activities}}
      </ul>
    </div>
  </div>
{{>smartAnswers}}
</div>
{{/applicationContent}}
{{/layout}}
